{
  "name": "tree-sitter-gleam",
  "version": "1.0.0",
  "description": "A tree-sitter grammar for the Gleam programming language",
  "main": "bindings/node",
  "types": "bindings/node",
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/J3RN/tree-sitter-gleam.git"
  },
  "keywords": [
    "gleam",
    "parser",
    "lexer",
    "tree-sitter"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "author": "Jonathan Arnett",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/J3RN/tree-sitter-gleam/issues"
  },
  "homepage": "https://github.com/J3RN/tree-sitter-gleam#readme",
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "tree-sitter-cli": "^0.20.6",
    "node-gyp": "^10.0.1",
    "prebuildify": "^6.0.1"
  },
  "tree-sitter": [
    {
      "scope": "source.gleam",
      "file-types": [
        "gleam"
      ],
      "injection-regex": "^gleam$",
      "highlights": "./queries/highlights.scm"
    }
  ]
}
